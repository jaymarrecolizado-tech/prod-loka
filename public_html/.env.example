# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# API Configuration
VITE_API_BASE=/api
API_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=loka_fleet
DB_USER=loka_user
DB_PASSWORD=secret
DB_PREFIX=loka_

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mail Configuration
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@loka-fleet.com
MAIL_FROM_NAME="LOKA Fleet"

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=loka_

# Queue Configuration
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Security
APP_KEY=base64:your-app-key-here
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080,localhost:5173

# Features
FEATURE_ENABLE_REGISTRATION=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false

# External Services
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Deployment
DEPLOY_ENV=development
DEPLOY_BRANCH=main
